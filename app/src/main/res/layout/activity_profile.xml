<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ProfileActivity">


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="275dp"
        android:background="@drawable/vector_rectanglehome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="75dp"
        android:layout_height="71dp"
        android:layout_margin="10dp"
        android:background="@drawable/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/helveticaneuebold"
        android:text="PROJECT RED"
        android:textColor="#BC1817"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/imageView3" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:background="@drawable/underline"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/helveticaneueitalic"
        android:paddingStart="15dp"
        android:paddingTop="5dp"
        android:text="RUN TO EMPOWER DONATIONS"
        android:textColor="#454545"
        android:textSize="9dp"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/helveticaneuebold"
        android:text="Profile Settings"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/vector_logout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5">

        <ImageView
            android:id="@+id/circle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:background="@drawable/vector_circle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/circle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:background="@drawable/vector_circle"
            app:layout_constraintStart_toEndOf="@id/circle1"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/circle3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:background="@drawable/vector_circle"
            app:layout_constraintStart_toEndOf="@id/circle2"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/circle4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:background="@drawable/vector_circle"
            app:layout_constraintStart_toEndOf="@id/circle3"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/helveticaneue"
            android:gravity="center"
            android:padding="5dp"
            android:text="Donate To \nUs"
            android:textSize="12dp"
            app:layout_constraintEnd_toEndOf="@+id/circle1"
            app:layout_constraintStart_toStartOf="@+id/circle1"
            app:layout_constraintTop_toBottomOf="@+id/circle1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/helveticaneue"
            android:padding="5dp"
            android:text="Profile"
            android:textSize="12dp"
            app:layout_constraintEnd_toEndOf="@+id/circle2"
            app:layout_constraintStart_toStartOf="@+id/circle2"
            app:layout_constraintTop_toBottomOf="@+id/circle2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/helveticaneue"
            android:padding="5dp"
            android:text="Chats"
            android:textSize="12dp"
            app:layout_constraintEnd_toEndOf="@+id/circle3"
            app:layout_constraintStart_toStartOf="@+id/circle3"
            app:layout_constraintTop_toBottomOf="@+id/circle3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/helveticaneue"
            android:padding="5dp"
            android:text="Feedback"
            android:textSize="12dp"
            app:layout_constraintEnd_toEndOf="@+id/circle4"
            app:layout_constraintStart_toStartOf="@+id/circle4"
            app:layout_constraintTop_toBottomOf="@+id/circle4" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/vector_donation"
            app:layout_constraintBottom_toBottomOf="@+id/circle1"
            app:layout_constraintEnd_toEndOf="@+id/circle1"
            app:layout_constraintStart_toStartOf="@+id/circle1"
            app:layout_constraintTop_toTopOf="@+id/circle1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/vector_profile"
            app:layout_constraintBottom_toBottomOf="@+id/circle2"
            app:layout_constraintEnd_toEndOf="@+id/circle2"
            app:layout_constraintStart_toStartOf="@+id/circle2"
            app:layout_constraintTop_toTopOf="@+id/circle2" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/vector_chats"
            app:layout_constraintBottom_toBottomOf="@+id/circle3"
            app:layout_constraintEnd_toEndOf="@+id/circle3"
            app:layout_constraintStart_toStartOf="@+id/circle3"
            app:layout_constraintTop_toTopOf="@+id/circle3" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/vector_feedback"
            app:layout_constraintBottom_toBottomOf="@+id/circle4"
            app:layout_constraintEnd_toEndOf="@+id/circle4"
            app:layout_constraintStart_toStartOf="@+id/circle4"
            app:layout_constraintTop_toTopOf="@+id/circle4" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        app:layout_constraintVertical_bias="0.30">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/profile_page1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.30">


            <EditText
                android:id="@+id/profile_Phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:textSize="15dp"
                android:background="@drawable/vector_edittext"
                android:fontFamily="@font/helveticaneue"
                android:hint="Phone Number"
                android:inputType="phone"
                android:paddingStart="20dp"
                android:textColor="#454545"
                android:textColorHint="#454545"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/profile_Age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:textSize="15dp"
                android:background="@drawable/vector_edittext"
                android:fontFamily="@font/helveticaneue"
                android:hint="Age"
                android:inputType="number"
                android:paddingStart="20dp"
                android:textColor="#454545"
                android:textColorHint="#454545"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profile_Phone" />



            <TextView
                android:id="@+id/profile_CovidPositive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/vector_edittext"
                android:text="Covid Positive"
                android:layout_margin="20dp"
                android:paddingStart="22dp"
                android:paddingTop="12.5dp"
                android:textColor="#454545"
                android:textSize="15dp"
                android:fontFamily="@font/helveticaneue"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profile_Age" />

            <TextView
                android:id="@+id/profile_CovidRecovered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/vector_edittext"
                android:text="Covid Recovered"
                android:paddingStart="22dp"
                android:paddingTop="12.5dp"
                android:textColor="#454545"
                android:textSize="15dp"
                android:fontFamily="@font/helveticaneue"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profile_CovidPositive" />

            <TextView
                android:id="@+id/profile_CovidFree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/vector_edittext"
                android:text="Covid Free"
                android:paddingStart="22dp"
                android:paddingTop="12.5dp"
                android:textColor="#454545"
                android:textSize="15dp"
                android:fontFamily="@font/helveticaneue"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profile_CovidRecovered" />

            <CheckBox
                android:id="@+id/profile_CB_Positive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                app:layout_constraintBottom_toBottomOf="@+id/profile_CovidPositive"
                app:layout_constraintEnd_toEndOf="@+id/profile_CovidPositive"
                app:layout_constraintTop_toTopOf="@+id/profile_CovidPositive" />

            <CheckBox
                android:id="@+id/profile_CB_Recovered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                app:layout_constraintBottom_toBottomOf="@+id/profile_CovidRecovered"
                app:layout_constraintEnd_toEndOf="@+id/profile_CovidRecovered"
                app:layout_constraintTop_toTopOf="@+id/profile_CovidRecovered" />

            <CheckBox
                android:id="@+id/profile_CB_Free"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                app:layout_constraintBottom_toBottomOf="@+id/profile_CovidFree"
                app:layout_constraintEnd_toEndOf="@+id/profile_CovidFree"
                app:layout_constraintTop_toTopOf="@+id/profile_CovidFree" />



            <Button
                android:id="@+id/profile_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="40dp"
                android:background="@drawable/vector_buttonbg"
                android:fontFamily="@font/helveticaneue"
                android:text="SAVE"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profile_CovidFree" />

        </androidx.constraintlayout.widget.ConstraintLayout>





    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>